<!DOCTYPE html>
<html lang="pt-br">


<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>UFConnect - Cadastro</title>
  <link rel="icon" href="/icons/UFConnect.png" type="image/x-icon"> <!--Icone do site-->
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .form-control:focus {
      box-shadow: 0 0 0 0.2rem rgba(28, 198, 221, 0.25);
      border-color: #1cc6dd;
    }


    .btn-purple {
      background-color: #b938c2;
      color: white;
    }


    .btn-purple:hover {
      background-color: #9d2cae;
    }


    .toggle-password {
      position: absolute;
      right: 10px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      user-select: none;
    }
  </style>
</head>


<body class="bg-dark text-light d-flex justify-content-center align-items-center vh-100">

  <div class="text-center">
    <img src="pictures/UFConnect.png" alt="logo" width="300" height="100" class="logo-img mb-4">

    <div class="card p-4 text-start" style="width: 320px;">
      <h2 class="text-center mb-3 text-dark">CRIAR CONTA</h2>

      <form method="POST" action="/register">
        <div class="mb-3">
          <label class="alert alert-danger text-center w-100" role="alert">
            <%=erro%>
          </label>
          <label for="email" class="form-label">Digite seu e-mail</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="E-mail" required>
        </div>

        <!-- Campo de criar senha -->
        <div class="mb-3">
          <label for="password" class="form-label">Digite sua senha</label>
          <div class="input-group">
            <input type="password" name="password" id="password" class="form-control" placeholder="Senha" required>
            <span class="input-group-text bg-white border-start-0" id="toggle" style="cursor: pointer;">
              <img src="icons/mostrar.png" alt="Mostrar senha" width="20" height="20">
            </span>
          </div>
        </div>

        <!-- Campo de confirmar senha -->
        <div class="mb-3">
          <label for="password" class="form-label">Confirmar senha</label>
          <div class="input-group">
            <input type="password" name="confirmPassword" id="password" class="form-control" placeholder="Senha"
              required>
            <span class="input-group-text bg-white border-start-0" id="toggle-password" style="cursor: pointer;">
              <img src="icons/mostrar.png" alt="Mostrar senha" width="20" height="20">
            </span>
          </div>
        </div>

        <div class="d-flex flex-column">
          <button type="submit" class="btn btn-purple w-100 fw-bold mt-2">Finalizar cadastro</button>
          <a href="/login" class="btn w-100 fw-bold"
            style="border: 2px solid #1cc6dd; color: #1cc6dd; margin-top: 5%;">Entrar</a>
        </div>
      </form>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Toggle password script -->
  <script>
    document.querySelectorAll("#toggle, #toggle-password").forEach(toggle => {
      toggle.addEventListener("click", () => {
        const input = toggle.previousElementSibling;
        input.type = input.type === "password" ? "text" : "password";
      });
    });
  </script>
</body>


</html>